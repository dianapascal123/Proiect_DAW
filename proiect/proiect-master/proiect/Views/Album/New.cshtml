
@model proiect.Models.Album
@{
    ViewBag.Title = "Add album";
}
<section class="ftco-section ftco-bread">
    <div class="container">
        <div class="row no-gutters slider-text justify-content-center align-items-center">
            <div class="col-md-8 ftco-animate">

                <h1 class="bread">@ViewBag.Title</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex">
            <div class="col-lg-8">

                @using (Html.BeginForm(actionName: "New", controllerName: "Album"))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @Html.HiddenFor(m => m.UserId)
                    <div class="form-group">
                        @Html.Label("AlbumTitle", "Album Title")
                        <br />

                        @Html.TextBox("AlbumTitle", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AlbumTitle, "", new { @class = "text-danger" })

                    </div>


                    <div class="form-group">
                        <input type="submit" value="Add album" class="btn btn-primary py-3 px-5">
                    </div>
                }
            </div>

        </div>
    </div>
</section>

