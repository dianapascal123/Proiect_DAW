@model proiect.Models.Profile

@{
    ViewBag.Titlu = "Edit profile";
}

<section class="ftco-section ftco-bread">
    <div class="container">
        <div class="row no-gutters slider-text justify-content-center align-items-center">
            <div class="col-md-8 ftco-animate">

                <h1 class="bread">@ViewBag.Titlu </h1>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section">
    <div class="container">
        <div class="row d-flex">
            <div class="col-lg-8">
                @using (Html.BeginForm(actionName: "Edit", controllerName: "Profile"))
                {
                    @Html.HttpMethodOverride(HttpVerbs.Put)

                    @Html.HiddenFor(m => m.ProfileId)

                <div class="form-group">
                    @Html.Label("Name", "Name")
                    <br />
                    @Html.TextBoxFor(m => m.Name, new { type = "text" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                    <div class="form-group">
                        @Html.Label("Description", "Description")
                        <br />
                        @Html.TextArea("Description", @Model.Description)
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" value="Edit" class="btn btn-primary py-3 px-5">Edit</button>
                    </div>

                }
            </div>

        </div>
    </div>
</section>
