@model proiect.Models.Category
@{
    ViewBag.Title = "Edit category";
}
<section class="ftco-section ftco-bread">
    <div class="container">
        <div class="row no-gutters slider-text justify-content-center align-items-center">
            <div class="col-md-8 ftco-animate">

                <h1 class="bread">@ViewBag.Title </h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row d-flex">
            <div class="col-lg-8">

                @using (Html.BeginForm(actionName: "Edit", controllerName: "Category"))
                {
                    @Html.Hidden("CategoryId", Model.CategoryId)

                    @Html.HttpMethodOverride(HttpVerbs.Put)

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("CategoryName", "Category name")
                        <br />
                        @Html.TextBox("CategoryName", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        <input type="submit" value="Modify category" class="btn btn-primary py-3 px-5">
                    </div>
                }
            </div>

        </div>
    </div>
</section>
